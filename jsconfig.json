{
  "compilerOptions": {
    "target": "esnext",
    "checkJs": true,
    "jsx": "react-native",
    "baseUrl": "./",
    "lib": ["es2017"],
    "module": "commonjs",
    "noEmit": true,
    "allowJs": true,
    "isolatedModules": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,

    "paths": {
      "~/*": ["./src/*"],
      "@stores/*": ["./src/stores/*"],
      "@sagas/*": ["./src/sagas/*"],
      "@redux/*": ["./src/redux/*"],
      "@configs/*": ["./src/configs/*"],
      "@screens/*": ["./src/screens/*"],
      "@constants/*": ["./src/constants/*"],
      "@components/*": ["./src/components/*"],
      "@themes/*": ["./src/themes/*"],
      "@ui/*": ["./src/ui/*"]
    }
  }
}
